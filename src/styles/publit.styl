.search_sy {
  width: 256px;
  margin-top: 20px;

  .input_search {
    width: 100%;
    .title_search{
      color #2172ce  
    }
  }
  .el-input__inner:focus{
      border-color: #DCDFE6;
      border-bottom 1px solid #2172ce
  }
  .el-input-group__prepend {
    padding: 0 10px;
  }

  .el-input-group__append {
    padding: 0 12px;
  }
}
.img_sy{
  margin-top 14px;  
}
.hot_msg_sy {
  width: 256px;
  box-sizing: border-box;
  border: 1px solid #ccc;
  color: #333;
  margin-top: 20px;

  .side_top {
    display: flex;
    align-items: center;
    font-size: 18px;
    padding: 10px;
    border-bottom: 1px solid #ccc;
    background-color: #f0f0f0;

    .icon-youzhijiantou1 {
      color: #2172ce;
      font-size: 18px;
      margin-right: 6px;
    }
  }

  .hot_body {
    padding: 10px 10px;
  }

  .hang_hot {
    display: flex;
    padding: 4px 0px;
    font-size: 15px;
    cursor: pointer;
    border-bottom: 1px solid #f0f0f0;

    .iconfont {
      font-size: 12px;
      padding-right: 4px;
    }

    .icon-triangle-right {
      font-size: 10px;
    }

    .url:hover {
      color: #2172ce;
    }

    .tab_left {
      // flex: 1;
      display: inline-flex;
      align-items: center;
      width: 100%;
    }

    .tab_right {
      color: #999;
    }
  }
}

.side_right_nav_sy {
  width: 256px;
  box-sizing: border-box;
  border: 1px solid #ccc;
  color: #333;

  .side_top {
    display: flex;
    align-items: center;
    font-size: 18px;
    padding: 10px;
    border-bottom: 1px solid #ccc;
    background-color: #f0f0f0;

    .icon-youzhijiantou1 {
      color: #2172ce;
      font-size: 18px;
      margin-right: 6px;
    }
  }

  .side_li {
    padding: 10px 10px 10px 26px;
    font-size: 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    cursor: pointer;

    &+.side_li {
      border-top: 1px solid #f0f0f0;
    }

    .icon-jiantou-shuangyou {
      color: #999;
      font-size: 16px;
    }
  }

  .side_li.active, .side_li:hover {
    background-color: #2172ce;
    color: #fff;

    .icon-jiantou-shuangyou {
      color: #fff;
    }
  }
}

.turn_to_list_p_sy {
  display: flex;
  color: #888;
  align-items: center;
  font-size: 16px;
  background-color: #f7f7f7;
  padding: 10px 20px;
  box-shadow: 1px 1px 4px #ccc;
  margin 10px 0
  .iconfont {
    font-size: 12px;
    padding-right: 6px;
  }

  .col_nav {
    padding: 0 6px;
    color: #888;

    &:hover {
      color: #2172ce;
      text-decoration: none;
    }
  }
}